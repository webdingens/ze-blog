---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../../consts";

const pathname = Astro.url.pathname;
---

<header>
	<div class="title-icon">
		<h2>
			{SITE_TITLE}
		</h2>
		<a href="https://webdingens.de">
			<img src="/favicon.svg" alt="Logo" width="50" />
		</a>
	</div>
	<nav>
		<HeaderLink href="/">Overview</HeaderLink>
		<HeaderLink href="https://webdingens.de" external>Homepage</HeaderLink>
		<HeaderLink href="https://webdingens.de/portfolio" external>
			Portfolio
		</HeaderLink>
		<HeaderLink href="https://webdingens.de/about" external>
			About Me
		</HeaderLink>
		<HeaderLink href="https://webdingens.de/contact" external>
			Contact
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
	.title-icon {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
</style>
